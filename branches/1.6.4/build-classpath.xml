<project name="jflat-classpath" basedir=".">

	<property file="build-code.properties" />

	<path id="class.path">
		<fileset dir="${lib.dir}">
			<include name="**.jar" />
		</fileset>
	</path>

	<path id="run.class.path">
		<path refid="class.path" />
		<dirset dir="${build.classes}" />
	</path>
	

	<path id="junit.class.path">
		<path refid="run.class.path" />
		<fileset dir="${lib.dir}">
			<include name="**.jar" />
		</fileset>
	</path>
	
</project>